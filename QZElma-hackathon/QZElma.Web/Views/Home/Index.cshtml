@model List<LeaderBoardViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Имя
            </th>
            <th>
                Счет
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>
                @user.UserName
            </td>
            <td>
                @user.RightAnswerCount
            </td>
        </tr>
        }
    </tbody>
</table>
